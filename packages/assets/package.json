{
  "name": "@neo-tokyo/assets",
  "version": "1.0.0",
  "description": "Shared game assets for Neo-Tokyo: Rival Academies",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./textures/*": "./textures/*",
    "./models/*": "./models/*",
    "./sounds/*": "./sounds/*",
    "./fonts/*": "./fonts/*"
  },
  "scripts": {
    "copy-textures": "bash scripts/copy-textures.sh",
    "optimize": "bash scripts/optimize-assets.sh",
    "manifest": "tsx scripts/generate-manifest.ts"
  },
  "files": [
    "src",
    "textures",
    "models",
    "sounds",
    "fonts"
  ],
  "devDependencies": {
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  }
}
