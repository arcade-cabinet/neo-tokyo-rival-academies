{
  "name": "@neo-tokyo/game",
  "version": "0.1.0",
  "description": "An Action JRPG set in Neo-Tokyo featuring rival academies",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vitest run"
  },
  "dependencies": {
    "@babylonjs/core": "^8.46.2",
    "@babylonjs/gui": "^8.46.2",
    "@babylonjs/loaders": "^8.46.2",
    "@capacitor/android": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/motion": "^8.0.0",
    "@capacitor/screen-orientation": "^8.0.0",
    "@neo-tokyo/content-gen": "workspace:*",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "miniplex": "^2.0.0",
    "miniplex-react": "^2.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reactylon": "^3.5.2",
    "three": "^0.182.0",
    "yuka": "^0.7.8",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@capacitor/cli": "^8.0.1",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@types/yuka": "^0.7.4",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.22.0",
    "pnpm": ">=10.0.0"
  }
}
