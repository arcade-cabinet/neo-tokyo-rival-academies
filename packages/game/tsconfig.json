{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@systems/*": ["src/systems/*"],
			"@state/*": ["src/state/*"],
			"@utils/*": ["src/utils/*"]
		},
		"types": ["vite/client"]
	},
	"include": ["src"],
	"exclude": [
		"src/components/react/game/**",
		"src/components/react/objects/**",
		"src/components/react/scenes/WelcomeScene.tsx",
		"src/components/react/scenes/IsometricScene.tsx",
		"src/components/react/scenes/SideScrollScene.tsx",
		"src/systems/CombatSystem.tsx",
		"src/systems/PhysicsSystem.tsx",
		"src/systems/InputSystem.tsx",
		"src/systems/AISystem.ts",
		"src/systems/AIStateMachine.ts",
		"src/systems/EnemyAI.ts",
		"src/systems/TentacleSwarm.ts",
		"src/systems/HitDetection.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
